
<%= form_for @grade, multipart: true do |f| %>
  <% if @grade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@grade.errors.count, "error") %> prohibited this grade from being saved:</h2>

      <ul>
      <% @grade.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <strong>Наименование</strong>
    <%= f.text_field :name, class: "form-control", placeholder: "Введите наименование"%>
  </div><br>
  <div class="field">
    <strong>Руководитель</strong>
    <%= f.select(:teacher_id, options_from_collection_for_select(Teacher.all, :id, :fio), {}, {:class => 'form-control'}) %>
  </div><br>
  <div class="field">
    <strong>Комментарий</strong>
    <%= f.text_field :comment, class: "form-control", placeholder: "Коментарий" %>
  </div><br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>