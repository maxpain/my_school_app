<%= form_for @product, multipart: true do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <strong>Наименование</strong>
    <%= f.text_field :title, class: "form-control", placeholder: "Введите наименование"%>
  </div><br>
  <div class="field">
    <strong>Описание</strong>
    <%= f.text_area :description, class: "form-control", rows: "3", placeholder: "Введите описание" %>
  </div><br>
  <div class="field">
    <strong>Цена</strong>
    <%= f.text_field :price, class: "form-control", placeholder: "Введите цену" %>
  </div><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>